# Application settings
APP_ENV=production
DOMAIN=example.com
CERTBOT_EMAIL=admin@example.com
SECRET_KEY=change-me
WORLD_DEFAULT_SPEED=1.0

# Database
POSTGRES_USER=batalla
POSTGRES_PASSWORD=supersecretpassword
POSTGRES_DB=batalla_medieval
DB_URL=postgresql+psycopg://batalla:supersecretpassword@database:5432/batalla_medieval

# Email
EMAIL_SERVER=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=mailer@example.com
EMAIL_PASSWORD=emailpassword
EMAIL_USE_TLS=true

# Frontend build
VITE_API_BASE_URL=https://example.com/api

# Docker images (used by CI/CD & compose overrides)
BACKEND_IMAGE=ghcr.io/your-org/batalla-medieval-backend:latest
FRONTEND_IMAGE=ghcr.io/your-org/batalla-medieval-frontend:latest

# Deployment (used by GitHub Actions)
REGISTRY=ghcr.io
REGISTRY_USERNAME=github-actions
REGISTRY_PASSWORD=
SSH_HOST=your.server.com
SSH_USER=deploy
SSH_PORT=22
SSH_KEY_BASE64=
REMOTE_APP_DIR=/opt/batalla-medieval
